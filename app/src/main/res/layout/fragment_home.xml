<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewCount,UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/greeting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="40sp"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/l_size"
                    android:text="@string/greeting"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <View
                    android:id="@+id/profile_background"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/ellipse_4"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="288dp"
                    android:layout_marginTop="34dp"
                    android:src="@drawable/img_4573_2"
                    android:contentDescription="@string/profile_photo" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="350dp"
                android:layout_height="270dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="27dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="73dp"
                        android:src="@drawable/student_services"
                        android:contentDescription="@string/student_health_photo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="210dp"
                        android:text="@string/student_health_services"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/m_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="235dp"
                        android:text="@string/home_title_1_hours"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/s_size"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="230dp"
                        android:layout_marginTop="205dp"
                        android:backgroundTint="@color/pop"
                        android:text="@string/call_button"
                        app:cornerRadius="20dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="350dp"
                android:layout_height="270dp"
                android:layout_margin="27dp"
                android:layout_marginStart="60dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="73dp"
                        android:src="@drawable/hotline"
                        android:contentDescription="@string/suicide_hotline_photo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="210dp"
                        android:text="@string/suicide_hotline"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/m_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="235dp"
                        android:text="@string/hours_24_7"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/s_size"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="230dp"
                        android:layout_marginTop="205dp"
                        android:backgroundTint="@color/pop"
                        android:text="@string/call_button"
                        app:cornerRadius="20dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="350dp"
                android:layout_height="270dp"
                android:layout_margin="27dp"
                android:layout_marginStart="60dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="73dp"
                        android:src="@drawable/harbor"
                        android:contentDescription="@string/student_affairs_photo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="210dp"
                        android:text="@string/student_affairs"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/m_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="235dp"
                        android:text="@string/hours_8_30am_5pm"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/s_size"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="230dp"
                        android:layout_marginTop="205dp"
                        android:backgroundTint="@color/pop"
                        android:text="@string/call_button"
                        app:cornerRadius="20dp" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="350dp"
                android:layout_height="270dp"
                android:layout_margin="27dp"
                android:layout_marginStart="60dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="72dp"
                        android:src="@drawable/student"
                        android:contentDescription="@string/career_center_photo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="210dp"
                        android:text="@string/career_center"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/m_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="235dp"
                        android:text="@string/hours_8_30am_5pm"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/s_size"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="230dp"
                        android:layout_marginTop="205dp"
                        android:backgroundTint="@color/pop"
                        android:text="@string/call_button"
                        app:cornerRadius="20dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>